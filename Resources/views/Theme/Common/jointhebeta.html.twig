{% trans_default_domain global_theme %}


<section id="{{ sectionName|default('jointhebeta') }}" class="skrollr-section" data-skrollr-size="1">
    <div class="bgImage" data-center="background-position: 0px 50%;" data-bottom-top="background-position: 0px 40%;"
         data-top-bottom="background-position: -40px 50%;" data-anchor-target="#{{ sectionName|default('jointhebeta') }}">
        <div class="skrollrContainer">
            <div class="skrollrContent">
                <div class="parallaxItem" data--106-top="opacity: 1"
                     data-bottom="opacity: 1; top: 200px; width: 100%; left: 0;"
                     data-anchor-target="#{{ sectionName|default('jointhebeta') }}">
                    <div class="container">
                        <div class="row">
                            <div class="col-lg-12 text-center">
                                <h2 class="section-heading">{{ (sectionName~'.betaJoinModal.heading')|trans }} <i
                                            class="fa fa-heart-o"></i></h2>
                            </div>
                            <div class="col-md-4 col-md-offset-4 col-sm-6 text-center">
                                <button class="btn btn-primary btn-block btn-lg" data-toggle="modal"
                                        data-target=".betajoin-modal">
                                    <h2>{{ (sectionName~'betaJoinModal.button_join')|trans }}</h2></button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>
</section>

<div class="betajoin-modal modal fade" id="portfolioModal1" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="close-modal" data-dismiss="modal">
                <button type="button" class="btn btn-primary" data-dismiss="modal"><i class="fa fa-times"></i>
                </button>
            </div>
            <div class="row">
                <div class="col-lg-8 col-lg-offset-2">
                    <div class="modal-body">
                        <h2>Join the Beta</h2>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


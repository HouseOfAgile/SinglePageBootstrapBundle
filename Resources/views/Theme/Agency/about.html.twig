{% trans_default_domain global_theme %}
<!-- Header -->
<!-- About Section -->
<section id="about">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 text-center">
                <h2 class="section-heading">{{ (sectionName~'.heading')|trans }}</h2>
                <h3 class="section-subheading text-muted">{{ (sectionName~'.subheading')|trans }}</h3>
            </div>
        </div>

        <div class="row">
            <div class="col-lg-12">
                <ul class="timeline">
                    {% for timeline_name,timeline_value in data.timeline %}
                    <li{{ (loop.index is odd)?'':' class="timeline-inverted"' }}>
                        <div class="timeline-image">
                            {% image '@HOASinglePageBundle/Resources/public/third-party/startbootstrap/templates/agency/img/about/1.jpg' %}
                            <img class="img-responsive img-circle" src="{{ asset_url }}" alt="">
                            {% endimage %}
                        </div>
                        <div class="timeline-panel">
                            <div class="timeline-heading">
                                <h4>{{ (sectionName~'.timeline.'~timeline_name~'.date')|trans }}</h4>
                                <h4 class="subheading">{{ (sectionName~'.timeline.'~timeline_name~'.name')|trans }}</h4>
                            </div>
                            <div class="timeline-body">
                                <p class="text-muted">{{ (sectionName~'.timeline.'~timeline_name~'.presentation')|trans }}</p>
                            </div>
                        </div>
                    </li>
                    {% endfor %}
                    <li class="timeline-inverted">
                        <div class="timeline-image">
                            <h4>{{ (sectionName~'.end_about.name')|trans }}</h4>
                        </div>
                    </li>
                </ul>
            </div>
        </div>
    </div>
</section>
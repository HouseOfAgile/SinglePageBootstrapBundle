    <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
    <script src="https://oss.maxcdn.com/libs/respond.js/1.4.2/respond.min.js"></script>
{% endblock stylesheets_main %}

{% block stylesheets %}



{% endblock stylesheets %}

{% block head_script %}
    {{ parent() }}

    {# Add extra css here or in a file if massive #}
    <style type="text/css">
        .navbar .dropdown-menu{
            background-color:#fec503;
        }

        .navbar-default .navbar-nav > .open > a:hover,
        .navbar-default .navbar-nav > .open > a:focus {
            color: #fff;
            background-color: #fec503;
        }
        .navbar-default .navbar-nav > .open > a {
            border-radius: 3px;
        }
        header {
        {% image '@HOASinglePageBundle/Resources/public/third-party/start-bootstrap/templates/agency/img/header-bg.jpg' %}
        background-image: url({{ asset_url }});
        {% endimage %}
        }

        section#contact {
        {% image '@HOASinglePageBundle/Resources/public/third-party/start-bootstrap/templates/agency/img/map-image.png' %}
            background-image: url({{ asset_url }});
        {% endimage %}
        }
    </style>

{% endblock %}



{% block foot_script %}
    {{ parent() }}

    {% javascripts filter='?yui_js' output='compiled/agency-frontend.js'
    '@HOASinglePageBundle/Resources/public/third-party/start-bootstrap/templates/agency/js/classie.js'
    '@HOASinglePageBundle/Resources/public/third-party/start-bootstrap/templates/agency/js/cbpAnimatedHeader.js'
    '@HOASinglePageBundle/Resources/public/third-party/start-bootstrap/templates/agency/js/jqBootstrapValidation.js'
    '@HOASinglePageBundle/Resources/public/third-party/start-bootstrap/templates/agency/js/contact_me.js'
    '@HOASinglePageBundle/Resources/public/third-party/start-bootstrap/templates/agency/js/agency.js' %}
    <script type="text/javascript" src="{{ asset_url }}"></script>
    {% endjavascripts %}
    {% include "HOASinglePageBundle:JsCommon:frontend-js.html.twig" %}

{% endblock foot_script %}


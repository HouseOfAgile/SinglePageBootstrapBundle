{% trans_default_domain global_theme %}

{% extends 'HOASinglePageBundle::base.html.twig' %}
{% from 'DacorpExtraBundle:Macros:improvedFlash.html.twig' import session_flash %}

    {% block navbar %}
        {% embed 'HOASinglePageBundle:Theme/Agency:navbar.html.twig' with { fixedTop: false } %}
        {% endembed %}
    {% endblock navbar %}

{% block stylesheets_main %}
    <link href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css" rel="stylesheet"/>

    <!-- Custom Fonts -->
    <link href="http://fonts.googleapis.com/css?family=Montserrat:400,700" rel="stylesheet" type="text/css">
    <link href='http://fonts.googleapis.com/css?family=Kaushan+Script' rel='stylesheet' type='text/css'>
    <link href='http://fonts.googleapis.com/css?family=Droid+Serif:400,700,400italic,700italic' rel='stylesheet'
          type='text/css'>
    <link href='http://fonts.googleapis.com/css?family=Roboto+Slab:400,100,300,700' rel='stylesheet' type='text/css'>


    {% stylesheets filter='?yui_css,cssrewrite' output='css/compiled/agency-desktop-full.css'
    '@HOASinglePageBundle/Resources/public/less/themes/bootstrap-agency.less'
    %}

    <link rel="stylesheet" href="{{ asset_url }}" type="text/css" media="screen"/>
    {% endstylesheets %}


    {#{% stylesheets filter='?yui_css,cssrewrite,less' output='compiled/frontend.css'#}

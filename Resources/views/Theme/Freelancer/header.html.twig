{% trans_default_domain global_theme %}
<!-- Header -->
<header>
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                {% image '@HOASinglePageBundle/Resources/public/third-party/startbootstrap/templates/freelancer/img/profile.png' %}
                <img class="img-responsive" src="{{ asset_url }}" alt="">
                {% endimage %}
                <div class="intro-text">
                    <span class="name">{{ 'header.freelancer_name'|trans|raw }}</span>
                    <hr class="star-light">
                    <span class="skills">{{ 'header.freelancer_skills'|trans|raw }}</span>
                </div>
            </div>
        </div>
    </div>
</header>

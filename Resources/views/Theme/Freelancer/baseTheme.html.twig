{% trans_default_domain global_theme %}

{% extends 'HOASinglePageBundle::base.html.twig' %}
{% from 'DacorpExtraBundle:Macros:improvedFlash.html.twig' import session_flash %}

{% block body_tag %}
<body id="page-top" class="index">
{% endblock body_tag %}

{% block navbar %}
    {% embed 'HOASinglePageBundle:Navbar:navbar.html.twig' with { fixedTop: false } %}
    {% endembed %}
{% endblock navbar %}


{% block stylesheets_main %}
    <!-- Custom Fonts -->
    <link href="http://fonts.googleapis.com/css?family=Montserrat:400,700" rel="stylesheet" type="text/css">
    <link href="http://fonts.googleapis.com/css?family=Lato:400,700,400italic,700italic" rel="stylesheet" type="text/css">

    {% stylesheets filter='?yui_css,cssrewrite' output='css/compiled/freelancer-desktop-full.css'
    '@HOASinglePageBundle/Resources/public/less/themes/hoa-bootstrap.less'
    '@HOASinglePageBundle/Resources/public/less/themes/freelancer/freelancer.less'
    %}

    <link rel="stylesheet" href="{{ asset_url }}" type="text/css" media="screen"/>
    {% endstylesheets %}


    {#{% stylesheets filter='?yui_css,cssrewrite,less' output='compiled/frontend.css'#}
    {#'@HOASinglePageBundle/Resources/public/third-party/start-bootstrap/templates/freelancer/css/freelancer.css' %}#}
{##}
